<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="topBar">
        <attr name="leftImg" format="reference|color" />
        <attr name="leftImgIsShow" format="boolean" />

        <attr name="leftText" format="string"/>
        <attr name="leftTextSize" format="dimension"/>
        <attr name="leftTextColor" format="color"/>

        <attr name="centerText" format="string"/>
        <attr name="centerTextSize" format="dimension"/>
        <attr name="centerTextColor" format="color"/>

        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color"/>

        <attr name="rightImg" format="reference|color" />
        <attr name="rightImgIsShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

</resources>