<?xml version="1.0" encoding="utf-8"?>
<!--评论Item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

    <com.osiris.food.view.CircleImageView
            android:id="@+id/commentListViewItem_userHeader_img"
            android:layout_width="@dimen/dp31"
            android:layout_height="@dimen/dp31"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/commentListViewItem_userName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/commentListViewItem_userHeader_img"
            android:layout_marginLeft="8dp"
            android:text="小明同学"
            android:textSize="15sp"
            android:textColor="#454545"/>

    <TextView
            android:id="@+id/commentListViewItem_createTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/commentListViewItem_userName_tv"
            android:layout_below="@+id/commentListViewItem_userName_tv"
            android:layout_marginTop="8dp"
            android:text="09-01"
            android:textSize="13sp"
            android:textColor="@color/txt_gray_151"/>

    <TextView
            android:id="@+id/commentListViewItem_commentContent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/commentListViewItem_userName_tv"
            android:layout_below="@+id/commentListViewItem_createTime_tv"
            android:layout_marginTop="10dp"
            android:text="这是评论的内容"
            android:textSize="15sp"
            android:textColor="#ff2d2d2d"/>

    <TextView
            android:id="@+id/commentListViewItem_prise_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="10"
            android:drawableLeft="@drawable/bg_prise"
            android:gravity="center"
            android:drawablePadding="@dimen/dp8"
            android:textSize="12sp"
            android:textColor="#ff2d2d2d"/>

</RelativeLayout>