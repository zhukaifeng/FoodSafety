<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_background_245"
              android:orientation="vertical"
    >


    <include layout="@layout/layout_title"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:id="@+id/rl_nick_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_important_black_51"
                    />

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="餐饮服务从业人员"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3"/>
            <RelativeLayout
                android:id="@+id/rl_birthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_important_black_51"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3"/>

            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_important_black_51"
                    />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3"/>
            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_num"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_important_black_51"
                    />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3"/>





            <RelativeLayout
                android:id="@+id/rl_work_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知栏"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_important_black_51"
                    />

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无新的课程"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3"/>


            <RelativeLayout
                android:id="@+id/rl_study_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位名称"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_important_black_51"
                    />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3"/>
            <RelativeLayout
                android:id="@+id/rl_study_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已学习时长"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_important_black_51"
                    />

                <TextView
                    android:id="@+id/tv_study_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3"/>

            <RelativeLayout
                android:id="@+id/rl_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频已观看时长"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_important_black_51"
                    />

                <TextView
                    android:id="@+id/tv_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    />



            </RelativeLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>