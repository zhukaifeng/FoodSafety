<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginLeft="@dimen/dp34"
        >



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
            <LinearLayout
                android:id="@+id/linear_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/tv_study_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日首次登录"
                android:textSize="@dimen/sp14"
                android:textColor="@color/txt_important_black_51"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_study_title"
                android:textColor="@color/color_blue_btn"
                android:text="活跃时段加倍"
                android:textSize="@dimen/sp10"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录 +1/次 | 已获1分/上线1分"
                android:textColor="@color/txt_hint_input_gray_153"
                android:layout_below="@+id/linear_title"
                android:textSize="@dimen/sp10"
                />

        </RelativeLayout>



        <TextView
            android:id="@+id/tv_btn_type"
            android:layout_width="@dimen/dp69"
            android:layout_height="@dimen/dp25"
            android:layout_centerVertical="true"
            android:textColor="@color/color_blue_btn"
            android:background="@drawable/bg_study_score"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp34"
            android:text="已完成"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_add_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_important_black_51"
            android:layout_marginRight="@dimen/dp14"
            android:text="+1"
            android:layout_toLeftOf="@+id/tv_btn_type"
            android:gravity="center"
            />

    </RelativeLayout>






</LinearLayout>