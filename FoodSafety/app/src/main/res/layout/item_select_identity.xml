<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginTop="@dimen/dp31"
        android:layout_marginBottom="@dimen/dp17"
        >

        <CheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:checked="false"
            android:clickable="false"
            android:button="@null"
            android:background="@drawable/bg_checkbox_policy"
            />

        <TextView
            android:id="@+id/tv_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:layout_toRightOf="@+id/checkbox_select"
            android:layout_marginLeft="@dimen/dp17"
            android:text="餐饮服务从业人员"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp32"
        android:background="@color/gray_line_e3"/>


</LinearLayout>