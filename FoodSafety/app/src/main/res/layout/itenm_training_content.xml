<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp58">


        <ImageView
            android:id="@+id/iv_arrow_to"
            android:layout_width="@dimen/dp27"
            android:layout_height="@dimen/dp27"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_marginRight="@dimen/dp24"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_training_arrow"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《国务院食品安全办等14部门关于提升......"
            android:textSize="@dimen/sp13"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/iv_arrow_to"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp22"
            android:layout_marginRight="@dimen/dp25"

            />



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp2"
            android:id="@+id/view_line"
            android:layout_marginLeft="@dimen/dp22"
            android:layout_marginRight="@dimen/dp22"
            android:background="@color/gray_line_e3"
            android:layout_alignParentBottom="true"

            />

    </RelativeLayout>








</LinearLayout>